.tipbox
 position fixed
 height 100vh
 width 100vw
 top 0
 display flex
 justify-content center
 align-items center
 z-index 1000
.tip_ms_b_nocenter
 min-height 5rem;
 width 50%;
 display flex
 justify-content center
 align-items center
 border-radius 0.5rem;
 background-color #00000082
 color #fff
 font-size 1rem
.tip_ms_b
 min-height 5rem;
 width 50%;
 display flex
 justify-content center
 align-items center
 border-radius 0.5rem;
 background-color #00000082
 color #fff
 font-size 1rem
 text-align center;
.tip_mes
 margin 5px;
.example-enter {
    opacity: 0;
}
  
.example-enter.example-enter-active {
    opacity: 1;
    transition: opacity 200ms ease;
}
  
.example-exit {
    opacity: 1;
}
  
.example-exit.example-exit-active {
    opacity: 0;
    transition: opacity 200ms ease;
}

 