.Gamebutton
 width 90%
 height 50% 
 position relative
 ._button
  width 100%
  height 100%
  border-radius: 20px;
  border: 1px solid #dcdfe6;
  line-height 100%
  color #fff
  font-weight bold
  cursor pointer
  &:focus
    outline 0
    outline-width 0
  span
   line-height 2vh
   font-size 2vh
   vertical-align middle
 .buttonblue
    background-color: #409eff;
    border-color: #409eff;
 .buttonglue 
    background-color: #aaf978;
    border-color:#aaf978; 
 .buttonpink
    background-color: #FFCCCC;
    border-color:#FFCCCC; 
 .buttonorange
    background-color: #EEC900;
    border-color:#EEC900; 
     